{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "@config/*": ["config/*"],
            "@middlewares/*": ["middlewares/*"],
            "@controllers/*": ["controllers/*"],
            "@routes/*": ["routes/*"],
            "@errors/*": ["errors/*"],
            "@schemas/*": ["schemas/*"],
            "@services/*": ["services/*"],
            "@helpers/*": ["helpers/*"],
            "@types/*": ["types/*"],
            "@repositories/*": ["repositories/*"],
            "@interfaces/*": ["interfaces/*"]
        }
    },
    "include": ["src/**/*", "tests"],
    "exclude": ["node_modules", "tests"]
}
